#define FONT Monospace-10

#ifdef DARK
XTerm*background: #2e3436
XTerm*foreground: #eeeeec
xterm*cursorColor: #fce94f
#else
XTerm*background: #eeeeec
XTerm*foreground: #2e3436
xterm*cursorColor: #204a87
#endif

XTerm*charClass: 33:48,37:48,45-47:48,38:48,58:48
XTerm*termName: XTerm-256color
XTerm*faceName: FONT
XTerm*font: 7x13
XTerm*bellIsUrgent: true
XTerm*locale: true
XTerm*saveLines: 4096
XTerm*eightBitInput: false
XTerm*cutNewLine: false
XTerm*on4Clicks: group
XTerm*visualBell: true
