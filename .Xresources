#define FONT Terminus-12

URxvt.font: xft:Terminus:size=12, xft:Mono:size=12, xft:Symbola:size=12, -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*

#ifdef LIGHT
XTerm*background: #eeeeec
XTerm*foreground: #2e3436
URxvt*background: #eeeeec
URxvt*foreground: #2e3436
#else
XTerm*background: #2e3436
XTerm*foreground: #eeeeec
URxvt*background: #2e3436
URxvt*foreground: #eeeeec
#endif

URxvt*urgentOnBell: true
URxvt*saveLines: 5000
