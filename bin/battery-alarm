#!/bin/sh
export PATH="$PATH:$HOME/bin:$HOME/.nix-profile/bin"
battery_level=`acpi -b | grep -P -o '[0-9]+(?=%)'`
STATUS=$(cat /sys/class/power_supply/AC*/online)
if [ $battery_level -le 10 ] && [ $STATUS == "0" ]
then
    export DISPLAY=:0
    tr=$(acpi -b | awk -F ',' '{print $3}')
    notify -u critical -t 10000 "BATTERY LOW [<b>$battery_level%</b>]" "$tr"
fi
