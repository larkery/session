#!/usr/bin/env zsh

T=$(mktemp -d)
N=0
IMGS=()

xrandr | grep '*' | awk -F'x| +' '{print $2 " " $3}' |
    {
    while read width height; do
        FI="$T/$N.jpg"
        curl -L "https://picsum.photos/$width/$height?random" > $FI
        N=$((N + 1))
        IMGS+=($FI)
    done
    setroot $IMGS
    }
